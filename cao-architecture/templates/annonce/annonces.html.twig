{% extends 'base.html.twig' %}

{% block body %}
    <h1>Vos annonces</h1>
    <div class="annonces_listing">
        <ul>
            {% for annonce in annonces %}
                <li>
                    <h2>{{ annonce.title }}</h2>
                    <p>{{ annonce.description }}</p>
                    <p>Prix : {{ annonce.price }} €</p>
                    <p>Type du véhicule : {{ annonce.typeVehicule }}</p>
                    <p>{{ annonce.isRented ? 'Loué' : 'Non loué'}}</p>
                    <a href="{{ path('annonce_edit', {'id': annonce.id}) }}">Modifier l'annonce</a>
                    <a href="{{ path('annonce_delete', {'id': annonce.id}) }}">Supprimer l'annonce</a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}